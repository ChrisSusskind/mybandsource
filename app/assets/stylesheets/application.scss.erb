// Special icons used
//= require material_icons

// Tether
//= require tether

// Custom bootstrap variables must be set or imported *before* bootstrap.
@import "bootstrap";

// Importing google fonts pack
@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,600,700,800,900');

// Importing glyphicons
@import "glyphicons";

// Importing slick carousel
@import 'slick';
@import 'slick-theme';

.main-container {
  width: 100%;
}

@media (max-width: 767px) {
  .main-container {
    padding: 0 0;
  }
}

// Typography

h1,h2,h3,h4,h5,h6,p, .h-largecaps {
  font-family: 'Montserrat', Helvetica, sans-serif;
}

.h-smallcaps {
  font-size: .55em;
  font-weight: 300;
  text-transform: uppercase;
}

.h-largecaps {
  font-size: .75em;
  font-weight: 500;
  text-transform: uppercase;
}

// Button pill style used for all buttons

.btn-pill {
  margin: 5px auto;
  height: 35px;
  border-radius: 20px;
  border: none;
  color: white;
  font-family: 'Montserrat', Helvetica, sans-serif;
  font-size: 9px;
  font-weight: 500;
  letter-spacing: 1px;
  padding: 1.5em;
  cursor: pointer;
}


/* Navbar Custom Styles */

.main-navbar {
  background-color: white;
  margin-top: 20px;
  margin-bottom: 20px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  white-space: nowrap;
  max-width: 1384px;

  .navbar-search-container{
    position: relative;
    width: 349px;

    .search-icon {
      position: absolute;
      top: 12px;
      left: 10px;
    }

    .search-box {
      display: block;
      border: 1px solid #dcdcdc;
      border-radius: 100px;
      width: 100%;
      height: 48px;
      padding-left: 40px;
    }
  }

  .close {
    display: none;
    position: relative;
    left: 5px;
    top: 4px;
    color: black;
  }

  div.navbar-links {

    a {
      line-height: 50px;
      height: 50px;
    }

    .login-header {
      color: black;
      font-weight: 800;
      font-size: .75em;
    }

    .signup-header {
      color: #AA182A;
      font-weight: 800;
      font-size: .75em;
      margin-left: 10px;
    }

    .notification-dropdown {
      z-index: 10000;

      span {
        color: white;
        font-size: .6em;
        position: absolute;
        left: 25px;
        top: 7px;
        z-index: 1000;
      }

      button {
        width: 50px;
        height: 50px;
        background-color: black;
        border: none;
        @extend %glyphicon-bell;
        color: white;
        cursor: pointer;
      }

      ul {
        width: 294px;
      }
    }

    .user-dropdown {

      z-index: 10000;
      padding-left: 10px;

      button {
        background-color: white;
        border: none;
        cursor: pointer;
      }

      ul {
        width: 200px;

        li {
          padding-left: 20px;
          padding-top: 15px;
          padding-bottom: 15px;
          border-bottom: solid thin #e5e5e5;

          a {
            color: black;
            font-weight: 800;
          }
        }
      }
    }
  }
}

