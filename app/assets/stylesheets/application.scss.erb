/* Footer */

footer {
  border-top: solid 1px #ddd;
  padding: 0 30px;
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.footer_copyright {
  flex-basis: 200px;
  order: 0;
  white-space: nowrap;

  p {
    font-weight: 300;
    font-size: .65em;
  }
}

.footer_links {
  order: 1;
  text-align: center;
}

.footer_links a {
  padding: 0 5px;
  display: inline-block;
  font-family: Montserrat, Helvetica, sans-serif;
  font-size: .65em;
  font-weight: 900;
  line-height: 2em;
  color: black;
  text-decoration: none;
}

.footer_social {
  order: 2;
}

@media (max-width: 800px) {

  footer {
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
  }

  .footer_copyright {
    order: 3;
    flex-basis: auto;
  }

  .footer_links {
    padding: 20px 0;

  }

  .footer_social {
  }

}

