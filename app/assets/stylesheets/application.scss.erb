// Custom bootstrap variables must be set or imported *before* bootstrap.
@import "bootstrap";


/* Homepage styling */

.jumbotron-main {
	background-image: url(<%= Cloudinary::Utils.cloudinary_url("static/home_header.png") %>);
  background-size: cover;
	color: white;
	height: 500px;
	border-radius: 0;
}

.artist-card {
	color: white;
	border-radius: 0;
	border: none;
	background: #242424;
}

.artist-card-image {
  width: 100%;
}

.genre-card {
	height: 300px;
	color: white;
	border: none;
	border-radius: 0;
	background-image: url(<%= image_path 'genre1.png' %>);
  background-size: cover;
}


/* Search bar */

.search-box {
  margin: 0 auto;
	border-radius: 50px;
}

.section-title-block {
	margin-top: 50px;
	margin-bottom: 50px;
}

.button-home {
	background: #AA182A;
	border: 1px solid #AA182A;
	border-radius: 100px;
}


/* Profile Styling */

.profile-banner {
  height: 334px;
  position: relative;
  overflow: hidden;
	background-color: gray;
	color: white;
  display: flex;
  align-items: flex-end;
}

.profile-banner-content {
  align-items: flex-end;
  position: relative;
  bottom: 25px;
  display: flex;
  height: 175px;
  padding: 0 15%;
  width: 100%;
}

.profile-banner-avatar {
  height: 175px;
  width: 175px;
}

.profile-banner-info {
  flex-grow: 2;
  padding-left: 20px;
  line-height: .9em;
  font-family: 'Montserrat', Helvetica, sans-serif;

  h1 {
    font-size: 1.7em;
    font-weight: 600;
    text-transform: none;
  }
  h2 {
    font-size: .6em;
    font-weight: 500;
    opacity: .6;
    text-transform: uppercase;
    letter-spacing: .15em;
  }
  h4 {
    font-weight: 200;
  }
}

.profile-banner-stats {
  h3 {
    font-size: .55em;
    font-weight: 500;
    text-transform: uppercase;
  }
  h4 {
    font-weight: 200;
  }
}

.profile-content {
  display: flex;
  align-items: flex-start;
  max-width: 750px;
  margin: 60px auto;
}

.profile-content-column {
  border-bottom: 1px solid #DDD;
  margin-right: 20px;
  display: flex;
  flex-direction: vertical;
  p {
    font-size: 1.1em;
    font-weight: 200;
    letter-spacing: .05em;
    line-height: 1.4em;
    color: #888;
  }
}

.profile-section {
  width: 100%;
  display: block;
  h1 {
    font-size: 1.1em;
    font-weight: 600;
    text-transform: uppercase;
  }
  p {
    font-size: 1.1em;
    font-weight: 200;
    letter-spacing: .05em;
    line-height: 1.4em;
    color: #888;
  }
}

.profile-sidebar {
  border-left: 1px solid #DDD;
  padding-left: 20px;
  float: left;
}

.profile-sidebar-group {
  h3 {
    font-size: .55em;
    font-weight: 500;
    text-transform: uppercase;
  }
  h4 {
    text-transform: uppercase;
    font-size: .6em;
    font-weight: 200;
    color: #AAA;
  }
}

.follow-button {
	background-color: rgb(184,0,25);
	box-shadow: none;
	border: none !important;
}

.follow-button:hover,
.follow-button:focus,
.follow-button:active {
	background-color: blue;
}

.share_button {
	background-color: transparent;
	border: none !important;
}

.right_align {
	text-align: right;
}

.followers_text {
	margin-bottom: 0;
}

.follow_count {
	position: relative;
	top: 20px;
}

.bio_margin {
	margin-bottom: 20px;
}

.profile-genres-left-padding {
	padding-left: 50px;
	border-left: 1px solid lightgray;
}

/* Artist page review styling */

#leave_rating {
  text-align: center;
  perspective: 250px;
  top: 40%;
  width: 100%
}

#leave_rating span {
  cursor: pointer;
  color: black;
  font-size: 35px;
  padding: 0 5px;
  opacity: .5;
  transition: all 150ms;
  display: inline-block;
  transform: rotateX(45deg);
  transform-origin: center bottom;
}

#leave_rating span.hover {
  color: #AA182A;
  opacity: 1;
  transform: rotateX(0deg);
  text-shadow: 0 0 30px #AA182A;
}

.dropbtn {
  background-color: #4CAF50;
  cursor: pointer;
}

/* Dropdown button on hover & focus */
.dropbtn:hover, .dropbtn:focus {
  background-color: #3e8e41;
}

// Review Display
.rating-stars {

}


/* Dropdown Content (Hidden by Default) */
.dropdown-content {
  display: none;
  position: absolute;
  background-color: #f9f9f9;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

/* Links inside the dropdown */
.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

/* Change color of dropdown links on hover */
.dropdown-content a:hover { background-color: #f1f1f1 }

/* Show the dropdown menu (use JS to add this class to the .dropdown-content container when the user clicks on the dropdown button) */
.show { display:block; }

/* Review display (partial view) styling */

.review-entry {
  margin: 25px;

  .review-user-image {
    margin-right: 10px;
  }
}

.review-section-title {
  font-size: 1.1em;
  font-weight: 600;
  line-height: 1.1;
  margin-bottom: 0.5rem;
  text-transform: uppercase;
}

.review-top-row span {
  cursor: pointer;
  color: black;
  font-size: 25px;
  padding: 0 5px;
  opacity: .5;
  transition: all 150ms;
  display: inline-block;
  transform: rotateX(45deg);
  transform-origin: center bottom;
}

.review-top-row span:hover {
  color: #AA182A;
  opacity: 1;
  transform: rotateX(0deg);
  text-shadow: 0 0 30px #AA182A;
}

.review-top-row {
  h4 {
    float: left;
    a {
      color: black;
    }
    
  }
  .rating-stars {  
  }
}

.review-bottom-row {
  width: 100%;
  float: left;
  clear: both;
  .timeago {
    float: right;
  }
}

.rating-stars {
  float: left;
  clear: none;
  span {
    font-size: 2em;
  }
}

.review_icon {
  margin: 0 5px;
}

.review_icon:hover {
  box-shadow: 5px 5px 50px black;
}

.rockon_icon_flipped {
  -o-transform: scaleY(-1);
  -webkit-transform: scaleY(-1);
  transform: scaleY(-1);
  filter: FlipV;
  -ms-filter: "FlipV";
}

.search_result {}


/* Footer */
footer {
    border-top: solid 1px #ddd;
    padding: 0 30px;
    display: flex;
    align-items: baseline;
    justify-content: space-between;
}

.footer_copyright {
    flex-basis: 200px;
    order: 0;
}

.footer_links {
    order: 1;
    text-align:center;
}

.footer_links a {
    padding: 0 5px;
    display: inline-block;
    font-family: Montserrat, Helvetica, sans-serif;
    font-size: .65em;
    font-weight: 900;
    line-height: 2em;
    color: black;
    text-decoration: none;
}

.footer_social {
    order: 2;
}

@media (max-width: 800px) {
    
    footer {
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
    }
    
    .footer_copyright {
        order: 3;
        flex-basis: auto;
    }
    
    .footer_links {
        padding: 20px 0;
        
    }
    
    .footer_social {
    }
    
}


