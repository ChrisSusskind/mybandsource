<div class="container">
  <div class="page-container">
    <div class="content-container">
      <div class="content-slim">
        <h3>
          Forgot your password?
        </h3>
        <div class="settings-form">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "" %><br />
              <%= f.email_field :email, autofocus: true, class: "field-editpage" %>
            </div>

              <div class="submit-btn-editpage">
                <%= f.submit "Reset Password", class: "d-block mx-auto btn btn-danger btn-pill" %>
              </div>
          <% end %>
        </div>
        <div class="devise-links forgot-password-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>