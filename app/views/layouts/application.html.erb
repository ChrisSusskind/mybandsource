<!DOCTYPE html>
<html lang="en">
	<head>
		<title>MyBandSource</title>

		<!-- Required meta tags -->
		<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= action_cable_meta_tag %>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>

		<%= csrf_meta_tags %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta property="og:url"                content="dev.mybandsource.com" />
    <meta property="og:title"              content="MyBandSource" />
    <meta property="og:description"        content="Check this out" />
    <meta property="og:image"              content=<%= cl_image_tag("static/mbs_facebook_image") %>
    <%= cloudinary_js_config %>
    <%= render "layouts/ga" %>
  </head>

	<body data-login="<%= current_user ? 'yes' : 'no' %>">
		<div class="<%= @fullwidth ? 'full-width' : 'container' %>">
			<div class="<%= @fullwidth ? 'container' : 'nada' %>">
        <%= render 'layouts/header' %>
      </div>

			<% if resource.errors.any? %>
          <div class="alert alert-danger">
            <%= devise_error_messages! %>
          </div>
			<% end %>

			<% if notice or alert %>
				<%= render 'layouts/alerts' %>
			<% end %>

			<%= render "shared/login_modal" %>
			<%= render "shared/signup_modal" %>
      <%= render "shared/about_modal" %>
      <%= render "shared/terms_modal" %>
      <%= render "shared/privacy_modal" %>
      <%= render "shared/claim_artist_modal_1" %>
      <%= render "shared/claim_artist_modal_2" %>
			
			<%= yield %>

			<%= render 'layouts/footer' %>


		</div>
	</body>
</html>
