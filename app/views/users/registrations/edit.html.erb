<div class="container">
  <div class="page-container">
    <div class="content-container">
      <div class="content-slim">
        <h3>
          Settings
        </h3>
        <div class="settings-form">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <div class="form-group">
                <%= f.label :name, class: "" %>
                <%= f.text_field :name, class: "field-editpage", value: @user.name %>
              </div>

              <div class="form-group">
                <%= f.label :email, class: "" %>
                <%= f.text_field :email, class: "field-editpage", value: @user.email %>
              </div>

              <div class="form-group">
                <%= f.label :password, class: "" %> <i class="h-smallcaps">(Leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "off", class: "field-editpage" %>
                <% if @minimum_password_length %>
                    <em class="h-smallcaps"><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, class: "" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "field-editpage" %>
              </div>

              <div class="form-group">
                <%= f.label :location, class: "" %>
                <%= f.text_field :location, class: "field-editpage", value: @user.location %>
              </div>

              <div class="form-group">
                <%= f.label :bio, class: "" %>
                <%= f.text_area :bio, rows: "3", class: "field-editpage", value: @user.bio %>
              </div>

              <% if @user.is_artist %>
                <div class="form-group">
                  <%= f.label :genre_id, 'Genre' %><br>
                  <%= f.select 'genre', options_for_select(Genre.all.collect {|genre| [genre.name, genre.id]}) %>
                </div>

                <div class="form-group">
                  <%= f.label :facebook_url %>
                  <%= f.text_field :facebook_url, class: "field-editpage", value: @user.facebook_url %>
                </div>

                <div class="form-group">
                  <%= f.label :itunes_url %>
                  <%= f.text_field :itunes_url, class: "field-editpage", value: @user.itunes_url %>
                </div>

                <div class="form-group">
                  <%= f.label :soundcloud_url %>
                  <%= f.text_field :soundcloud_url, class: "field-editpage", value: @user.soundcloud_url %>
                </div>

                <div class="form-group">
                  <%= f.label :spotify_url %>
                  <%= f.text_field :spotify_url, class: "field-editpage", value: @user.spotify_url %>
                </div>

                <div class="form-group">
                  <%= f.label :twitter_url %>
                  <%= f.text_field :twitter_url, class: "field-editpage", value: @user.twitter_url %>
                </div>
              <% end %>

              <div class="form-group">
                <%= f.label :current_password, class: "", style: "color:red" %> <i class="h-smallcaps" style="color:red">(To confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "off", class: "field-editpage" %>
              </div>

              <div class="submit-btn-editpage">
                <%= f.submit "Update", class: "d-block mx-auto btn btn-danger btn-pill" %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>