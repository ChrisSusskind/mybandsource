<div class="container">
  <div class="page-container">
    <div class="content-container">
      <div class="content-slim">
        <%= devise_error_messages! %>
        <h3>
          <span style="text-transform: uppercase;">Settings</span>
        </h3>
        <div class="settings-form">
          <div class="row connected-editpage">
            <div class="col-12">
              <span class="h-smallcaps">Connected Accounts</span>
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <button class="btn btn-primary btn-pill connect-btn-editpage">Connect with Facebook</button>
            </div>
          </div>
          <div class="row">
            <div class="col-3">
              <button class="btn btn-primary btn-pill connect-btn-editpage">Connect with Twitter</button>
            </div>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <div class="form-group">
                <%= f.label :name, class: "h-smallcaps" %>
                <%= f.text_field :name, class: "field-editpage", value: @user.name %>
              </div>

              <div class="form-group">
                <%= f.label :email, class: "h-smallcaps" %>
                <%= f.text_field :email, class: "field-editpage", value: @user.email %>
              </div>

              <div class="form-group">
                <%= f.label :password, class: "h-smallcaps" %> <i class="h-smallcaps">(Leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "off", class: "field-editpage" %>
                <% if @minimum_password_length %>
                    <em class="h-smallcaps"><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, class: "h-smallcaps" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "field-editpage" %>
              </div>

              <div class="form-group">
                <%= f.label :location, class: "h-smallcaps" %>
                <%= f.text_field :location, class: "field-editpage", value: @user.location %>
              </div>

              <div class="form-group">
                <%= f.label :bio, class: "h-smallcaps" %>
                <%= f.text_area :bio, rows: "3", class: "field-editpage", value: @user.bio %>
              </div>

              <div class="form-group">
                <%= f.label :current_password, class: "h-smallcaps", style: "color:red" %> <i class="h-smallcaps" style="color:red">(To confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "off", class: "field-editpage" %>
              </div>

              <div class="submit-btn-editpage">
                <%= f.submit "Update", class: "btn btn-primary btn-pill" %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>