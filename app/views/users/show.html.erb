<div class="container">
  <div class="jumbotron m-3">
    <div class="row">
      <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
        <img src="<%= Faker::LoremPixel.image("125x125", true, 'people') %>" class="rounded">
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
        <div class="row">
          <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11">
            <h3><%= @user.name %></h3>
          </div>
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p class="lead">Email: <a href="mailto:<%= @user.email %>"><%= @user.email %></a></p>
          </div>
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p class="lead"><%= @user.location %></p>
            <p class="lead"><%= @user.artists.size %> follows</p>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <%= link_to 'Edit User Profile', edit_user_registration_path(@user), class: "row m-0 float-right btn btn-primary" if current_user == @user %>
      </div>
    </div>
  </div>
  <div class="row m-2">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <h1>About</h1>
      <p>About section populated here</p>
      <%# <p>= @user.about %>
    </div>
  </div>

  <div class="row m-3">
    <% @user.artists.each do |user| %>
      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
        <%= user.name %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <% 6.times do %>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
          <img src="<%= Faker::LoremPixel.image("125x125", true, 'people') %>" class="rounded mx-auto d-block">
          <h3>THIS WILL BE AN ARTIST LINK WITH NAME</h3>
        </div>
    <% end %>
  </div>

  <div class="row m-3">
    <% @user.reviews.each do |review| %>
      <%= render partial: "shared/review", locals:{user: @user, review: review} %>
    <% end %>
  </div>

  <div class="row m-3">
    <% 3.times do %>
        <%= render partial: "shared/review" %>
    <% end %>
  </div>
</div>