<div class="container">
  <div class="page-container">
    <div class="content-container">
      <div class="content-slim">
        <h3>
          Create Artist Profile
        </h3>
        <div class="settings-form">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post }) do |f| %>
              <div class="form-group">
                <%= f.label :name, 'Artist Name', class: "" %>
                <%= f.text_field :name, class: "field-editpage" %>
              </div>

              <div class="form-group">
                <%= f.label :label, class: "" %>
                <%= f.text_field :label, class: "field-editpage" %>
              </div>

              <div class="form-group">
                <%= f.label :genre_id, 'Genre' %><br>
                <%= f.select 'genre', options_for_select(Genre.all.collect {|genre| [genre.name, genre.id]}) %>
              </div>


              <div class="form-group">
                <%= f.label :location, class: "" %>
                <%= f.text_field :location, class: "field-editpage" %>
              </div>


              <div class="form-group">
                <%= f.label :email, class: "" %>
                <%= f.text_field :email, class: "field-editpage" %>
              </div>

              <div class="form-group">
                <%= f.label :password, class: "" %> <i class="h-smallcaps">(Leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "off", class: "field-editpage" %>
                <% if @minimum_password_length %>
                    <em class="h-smallcaps"><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, class: "" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "field-editpage" %>
              </div>

              <%= hidden_field :is_artist, value: true %>

              <div class="submit-btn-editpage create-artist-btn-container">
                <%= f.submit "Add Artist Profile", class: "d-block mx-auto btn btn-danger btn-pill" %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>