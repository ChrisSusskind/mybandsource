<%= form_for(user) do |f| %>
  
  <div class="form-group">
  	<%= f.label :name %>
  	<%= f.text_field :name, class: "form-control", value: user.name %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control", value: user.email %>
    <% if user.confirmed_at %>
    <%= image_tag("checkmark.png", size: "20x20", class: "verified_checkmark") %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control", value: user.location %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_field :password, class: "form-control", value: user.password %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation, class: "form-control", value: user.password %>
  </div>


    <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions form-group">
    <%= f.submit "Edit", class: "btn btn-primary" %>
  </div>
<% end %>
