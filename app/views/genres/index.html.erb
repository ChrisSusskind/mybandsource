<div class="container">
	<h1 class="display-3">Genres</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Actions</th>
			</tr>
		</thead>

		<tbody>
			<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<td><%= link_to 'Show', genre %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

</div>