<div class="row response_content">
  <div class="col-3">

  </div>
    <div class="col-6">
    <%# @user.image %>
    <img src="<%= Faker::LoremPixel.image("50x50", true, 'people') %>" class="rounded rounded-circle float-left">

    <div class="row">
      <div class="col-12">
        <h4 class="review_username"><strong><%= response.user.name %></strong></h4>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <%= response.comment %>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <%= response.upvotes %>
        <% if user_signed_in? %>
            <% if response.upvotes_userlist.nil? || !current_user.id.to_s.in?(response.upvotes_userlist) %>
                <%= link_to(image_tag('rockon_icon.png', alt: 'Rockon Icon', size: '20x20', class: "review_icon"), "/artists/#{review.artist.id}/reviews/#{review.id}/responses/#{response.id}/upvote", method: :post) %>
            <% elsif !response.upvotes_userlist.nil? %>
                <%= link_to(image_tag('rockon_icon.png', alt: 'Rockon Icon', size: '20x20', class: "review_icon rockon_icon_flipped"), "/artists/#{review.artist.id}/reviews/#{review.id}/responses/#{response.id}/remove_upvote", method: :delete) unless response.upvotes_userlist.nil? %>
            <% end %>
            <%= link_to(image_tag('trashcan_icon.png', alt: "Trashcan Icon", size: "20x20", class: "review_icon"), [review.artist, review, response], method: :delete) if response.user == current_user %>
            <%= link_to(image_tag('share_icon.png', alt: "Share Icon", size: "20x20", class:"review_icon"), '') %>Share
        <% else %>
            <%= image_tag('rockon_icon.png', alt: 'Rockon Icon', size: '20x20', class: "review_icon") %>
        <% end %>
        <abbr class="timeago" title="<%= response.created_at.getutc.iso8601 %>">
          <%= response.updated_at.to_s %>
        </abbr>
      </div>
    </div>
  </div>
</div>
