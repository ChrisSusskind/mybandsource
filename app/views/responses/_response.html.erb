<div class="response-content">

  <div class="float-left response-pic <%= 'user-circle' unless response.user.is_artist %>" style="background: url('<%=response.user.picture.blank? ? 'https://res.cloudinary.com/mybandsource/image/upload/v1/static/blank_user' : response.user.picture %>');-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;background-position: center center;background-color:grey;height:36px;width:36px;">
  </div>

  <div class="response-text-container">
    <h4 class="response-username">
        <%= link_to(response.user.name, user_path(review.leaving_user)) %>
    </h4>

    <div class="response-comment">
      <%= response.comment %>
    </div>

    <% if is_artist %>
      <%= render partial: 'responses/response_info_bar', locals: {review: review, user_id: review.receiving_user_id, response: response} %>
    <% else %>
      <%= render partial: 'responses/response_info_bar', locals: {review: review, user_id: review.leaving_user_id, response: response} %>
    <% end %>
  </div>
</div>