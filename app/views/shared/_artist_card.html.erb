<div class="artist-card">
  <%= link_to cl_image_tag(artist_card.picture, class: "artist-image"), user_path(artist_card), method: :get if artist_card.picture? %>
  <%= link_to cl_image_tag("static/blank_user", class: "artist-image"), user_path(artist_card), method: :get unless artist_card.picture? %>

  <div class="name-container">
    <h5><%= artist_card.name.length > 25 ? truncate(artist_card.name, length: 25) : artist_card.name %></h5>
    <h6><%= artist_card.genre.nil? ? "HELLO" : artist_card.genre.name %></h6>
  </div>

  <div class="numbers-container">
    <span class="number">
      <%= cl_image_tag('static/white_star', :alt => "star", :width => 14, :height => 14, :class => "icon-image") %>
      <span class="number-bump"><%= artist_card.average_rating ? artist_card.average_rating.round(2) : 0.0 %></span>
    </span>

    <span class="number">
      <%= material_icon.message.md_18 %>
      <span class="number-bump"><%= number_to_human artist_card.review_count%></span>
    </span>

    <span class="number">
      <%= cl_image_tag('static/response_icon', :alt => "response", :width => 14, :height => 14, :class => "icon-image") %>
      <span class="number-bump"><%= number_to_human artist_card.response_count %></span>
    </span>
  </div>
</div>