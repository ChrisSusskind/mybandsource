<div class="modal hide fade" id="signup_modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close modal-close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body justify-content-center" id="signup-modal-body-start">
        <%= cl_image_tag("static/logo_v2_padded", :width => 175, :height => 40, :crop => :fill, class: "d-block mx-auto") %>
        <div class="login-signup-form">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>
            <div class="form-group mx-auto">
              <%= f.label :name, class: "h-smallcaps" %><br />
              <%= f.text_field :name, autofocus: true, class: "field-editpage" %>
            </div>

            <div class="form-group mx-auto">
              <%= f.label :email, class: "h-smallcaps" %><br />
              <%= f.email_field :email, class: "field-editpage" %>
            </div>

            <div class="form-group mx-auto">
              <%= f.label "Password (6 characters minimum)", class: "h-smallcaps" %>
              <% if @minimum_password_length %>
                  <em class="h-smallcaps">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "field-editpage" %>
            </div>

            <div class="form-group mx-auto">
              <%= f.label :password_confirmation, class: "h-smallcaps" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "field-editpage" %>
            </div>

            <div class="form-group mx-auto">
              <%= f.submit "Sign up", class: "btn btn-danger button-home btn-pill signup-btn-modal" %>
            </div>
            <hr />
          <% end %>

          <%= button_to "Log In with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-primary btn-pill fb-btn-login d-block mx-auto" %>
          <div class="login-message-signup-modal mx-auto">
            <p class="">Already have an account?&nbsp;<%= link_to "LOG IN", "#login_modal", "data-toggle": "modal", class: "bottom-modal-message", onclick: "signupToLoginModal()" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>