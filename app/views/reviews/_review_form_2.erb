<div class="review-form-2" id="review-form-2" style="display:none">
  <img onclick="reviewFormGoBack()" src="http://res.cloudinary.com/mybandsource/image/upload/v1498692412/static/red_left_arrow.png" />

  <span class="text-area">
    <textarea type="text" id="review-form-text" rows="1"><%= review.comment%></textarea>
    <% if review.receiving_user_id.nil? %>
      <button onclick="createReview()">Submit</button>
    <% else %>
      <button onclick="updateReview(<%= review.id %>)">Update</button>
    <% end %>
  </span>
</div>