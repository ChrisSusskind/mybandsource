<div class="container review_content" data-review_id=<%=review.id.to_s%>>
  <%= cl_image_tag(review.leaving_user.picture, :width => 50, :height => 50, :crop => :fill, :alt => "Avatar", class: "rounded rounded-circle float-left") if review.leaving_user.picture? %>
  <%= cl_image_tag("static/blank_user.png", :width => 50, :height => 50, :crop => :fill, :alt => "User Image", class: "rounded rounded-circle float-left") unless review.leaving_user.picture? %>â€¨

  <div class="row">
    <div class="col-12">
      <h4 class="review_username">
        <strong>
          <% if is_artist %>
              <%= link_to(review.leaving_user.name, user_path(review.leaving_user)) %>
        <% else %>
              <%= link_to(review.receiving_user.name, user_path(review.receiving_user)) %>
          <% end %>
        </strong>
      </h4>

      <span class="ratings_list" data-rating=<%=review.rating%>>
        <span>&starf;</span>
        <span>&starf;</span>
        <span>&starf;</span>
        <span>&starf;</span>
        <span>&starf;</span>
      </span>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= review.comment %>
    </div>
  </div>

  <% if is_artist %>
    <%= render partial: 'reviews/review_info_bar', locals: {review: review, user_id: review.receiving_user_id, responses_shown: responses_shown} %>
  <% else %>
    <%= render partial: 'reviews/review_info_bar', locals: {review: review, user_id: review.leaving_user_id, responses_shown: responses_shown} %>
  <% end %>

  <% if responses_shown %>
    <%= render partial: 'responses/response', collection: review.responses.order('CREATED_AT ASC'), locals: {review: review, is_artist: is_artist} %>
  <% end %>
</div>