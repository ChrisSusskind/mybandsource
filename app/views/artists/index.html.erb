<div class="container">

  <h1 class="display-3">Artists</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Profile</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @artists.each do |artist| %>
        <tr>
          <td><%= artist.name %></td>
          <td><%= artist.profile %></td>
          <td><%= link_to 'Show', artist %></td>
          <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>